<!doctype html>
<html>
<head>
    <title><%=title%></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
</head>
<body>
<% include templates/statusBar.ejs %>
<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-10">
            <div class="text-center">
                <h1>Virtual Stand-up</h1>
                <p class="lead"><%= title %></p>
            </div>
            <hr>
            <div id="scrollableArea" class="tab-pane">
                <ul id="messages" style="margin-top: 2%"></ul>
            </div>
            <script src="/socket.io/socket.io.js"></script>
            <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
            <script>
                $(document).ready(function () {
                    var elem = document.getElementById("scrollableArea");
                    elem.style.maxHeight = ($( window ).height() - 300).toString() + "px";
                });
                $(function () {
                    var socket = io();
                    $('form').submit(function () {
                        if($('#chatMessage').val() !== '') {
                            socket.emit('chat message', $('#chatMessage').val(), $('#userName').val());
                        }
                        $('#chatMessage').val('');
                        return false;
                    });
                    socket.on('chat message', function (msg, userName) {
                        if(userName == $('#userName').val()) {
                            $('#messages').append($('<li style="font-weight: bold; color: #00B7FF; float: right">').text(`${userName}: ${msg}`));
                            $('#messages').append($('</br>'));
                        }else {
                            $('#messages').append($('<li>').text(`${userName}: ${msg}`));
                        }
                        var elem = document.getElementById("scrollableArea");
                        elem.scrollTop = elem.scrollHeight;
                    });
                });
            </script>
        </div>
        <div class="col"></div>
    </div>
    <div id="footer" class="row">
        <div class="col"></div>
        <div class="col-10">
            <form action="/" method="">
                <div class="form-inline">
                        <div class="col-10" style="bottom: 2%">
                            <input style="width: 90%" id="chatMessage" name="chatMessage" class="form-control" placeholder="message" autocomplete="off">
                            <button style="width: 9%" class="btn btn-primary">Send</button>
                        </div>
                    <input type="hidden" id="userName" value="<%=userName%>" />
                </div>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
</body>
</html>