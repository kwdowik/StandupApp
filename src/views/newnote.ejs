<!DOCTYPE html>
<html>
<head>
    <title><%=title%></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
</head>
<body>
<% include templates/statusBar.ejs %>
<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-6">

            <div class="text-center">
                <h1>Virtual Stand-up</h1>
                <p class="lead">Use this form to enter your daily meeting notes...</p>
            </div>

            <% if(message.length > 0 ) { %>
            <div class="alert alert-danger alert-error">
                <%= message %>
            </div>
            <% } %>
            <form class="form-horizontal" action="newnote" method="post">
                <fieldset>

                    <!-- Form Name -->
                    <legend>Enter a Meeting Note</legend>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="control-label" for="memberName">Name</label>
                        <div>
                            <select id="memberName" name="memberName" class="form-control">
                                <option value="None">(Select Name)</option>
                                <option value="Mark">Mark</option>
                                <option value="David">David</option>
                                <option value="John">John</option>
                                <option value="Mary">Mary</option>
                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group">
                        <label class="control-label" for="project">Current Project or Task</label>
                        <div>
                            <select id="project" name="project" class="form-control">
                                <option value="None">(Select Project)</option>
                                <option value="matrix">Matrix API Development</option>
                                <option value="trinity">Trinity UI Development</option>
                                <option value="morpheus">Morpheus Data Integration</option>
                            </select>
                        </div>
                    </div>

                    <!-- Textarea -->
                    <div class="form-group">
                        <label class="control-label" for="workYesterday">What did you work on yesterday?</label>
                        <div>
                            <textarea class="form-control" id="workYesterday" name="workYesterday">Yesterday</textarea>
                        </div>
                    </div>

                    <!-- Textarea -->
                    <div class="form-group">
                        <label class="control-label" for="workToday">What will you work on today?</label>
                        <div>
                            <textarea class="form-control" id="workToday" name="workToday">Today</textarea>
                        </div>
                    </div>

                    <!-- Textarea -->
                    <div class="form-group">
                        <label class="control-label" for="impediment">Any Impediment(s)?</label>
                        <div>
                            <textarea class="form-control" id="impediment" name="impediment">None</textarea>
                        </div>
                    </div>

                    <!-- Button -->
                    <div class="form-group">
                        <label class="control-label" for="btnSaveNote">Save Note</label>
                        <div>
                            <button id="btnSaveNote" name="btnSaveNote" class="btn btn-primary" type="submit">Save</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div><!-- /.container -->
</body>
</html>